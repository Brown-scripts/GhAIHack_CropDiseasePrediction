# Environment Configuration Template
# Copy this file to .env and update the values as needed

# API Configuration
APP_NAME="Crop Disease Treatment Recommendation API"
APP_VERSION="1.0.0"
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Redis Configuration
# For local Redis (default)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_ENABLED=true

# For Redis Cloud (uncomment and use these instead)
# REDIS_HOST=your-redis-host.redns.redis-cloud.com
# REDIS_PORT=your-port
# REDIS_DB=0
# REDIS_PASSWORD=your-redis-password
# REDIS_ENABLED=true

# Cache Configuration (in seconds)
CACHE_TTL_DEFAULT=3600
CACHE_TTL_DISEASE_INFO=86400
CACHE_TTL_SUPPLIERS=1800
CACHE_TTL_PRICES=900

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# External APIs
NOMINATIM_BASE_URL=https://nominatim.openstreetmap.org
OVERPASS_BASE_URL=https://overpass-api.de/api/interpreter

# Scraping Configuration
SCRAPING_TIMEOUT=30
SCRAPING_DELAY=1.0
SCRAPING_RETRIES=3
USER_AGENT="CropDiseaseAPI/1.0 (+https://github.com/Brown-scripts/GhAIHack_CropDiseasePrediction)"

# Ghana Configuration
GHANA_CURRENCY=GHS

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Database Configuration (optional)
DATABASE_URL=

# Security
API_KEY=
CORS_ORIGINS=["*"]
